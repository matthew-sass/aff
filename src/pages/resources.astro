---
import CRLayout from "../layouts/CRLayout.astro";
import '../styles/lightbox.css'
import daisy from "../daisy.webp";
const posts = Object.values(await import.meta.glob('./resources/*.md', {eager: true}));
---

<CRLayout>
  <div class="resources-container">
    <img src={daisy.src} alt="Daisy" class="daisy daisy-left" />
    <img src={daisy.src} alt="Daisy" class="daisy daisy-right" />
    <div class="scroll-wrapper">
      <div class="scroll-box">
        <ul class="post-grid">
          {posts.map((post: any) => (
            <li class="post">
              <div class="thumbnail-wrapper">
                <a href={post.frontmatter.thumbnail} data-lightbox={post.frontmatter.title}>
                  <img src={post.frontmatter.thumbnail} alt="" />
                </a>
                <div class="overlay-pdf">
                  <div class="text-row">
                    <h4 class="title">{post.frontmatter.title}</h4>
                    <a href={`${post.frontmatter.file}`} class="view-button">View</a>
                  </div>
                </div>
              </div>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</CRLayout>

<script is:inline src="/js/lightbox-plus-jquery.js"></script>

<script is:inline>
  import lightboxPlusJquery from "../js/lightbox-plus-jquery";

  lightboxPlusJquery.option({
      'resizeDuration': 200,
      'wrapAround': 200,
      'positionFromTop': 20
  })
</script>

<style>
  * {
    box-sizing: border-box;
  }

  .resources-container {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: flex-start; /* top alignment like contact-section */
    overflow: hidden;
  }


  /* Scrollable box wrapper */
  .scroll-wrapper {
    display: flex;
    justify-content: center;
    /* preserve theme top spacing */
    margin-top: 2rem; 
    margin-bottom: 2rem;
    padding: 0 1rem;
  }

  .scroll-box {
    width: 600px;           
    max-height: 70vh;       
    overflow-y: auto;       
    padding: 1rem;
    background-color: transparent;
    box-shadow: 0 4px 8px rgba(0,0,0,0.3);
    border-radius: 8px;
  }

  .post-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1em;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .post {
    padding-bottom: 20px;
    transition: transform 0.3s ease-in-out;
  }

  .post img {
    width: 100%;
    max-height: 250px;
    object-fit: cover;
    object-position: top;
    border-radius: 5px;
    outline: 1px solid #ddd;
  }

  .text-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 8px;
  }

  .view-button {
    padding: 3px 18px;
    color: #efeeee;
    text-decoration: none;
    font-weight: 900;
    outline: 2px solid #efeeee;
    border-radius: 9999rem;
  }

  /* Custom scrollbar */
  .scroll-box::-webkit-scrollbar {
    width: 10px;
  }

  .scroll-box::-webkit-scrollbar-thumb {
    background-color: #efeeee; /* thumb color */
    border-radius: 5px;
  }

  .scroll-box::-webkit-scrollbar-track {
    background: rgba(255,255,255,0.1); /* subtle track */
    border-radius: 5px;
  }

  /* Daisies fade-in */
  .daisy {
    position: absolute;
    top: 33%;
    transform: translateY(-50%);
    width: 30vw;
    pointer-events: none;
    z-index: 0;

    /* fade-in setup */
    opacity: 0;
    transition: opacity 1.0s ease-in-out;
  }

  .daisy-left {
    left: 0;
    transform: translateY(-50%) scaleX(-1);
  }

  .daisy-right {
    right: 0;
  }

  .daisy.fade-in {
    opacity: 0.5;
  }

  @media (max-width: 1020px) {
    .daisy {
      display: none;
    }
  }

</style>

<script is:inline>
  window.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".daisy").forEach(d => d.classList.add("fade-in"));
  });
</script>
