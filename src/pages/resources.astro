---
import Layout from "../layouts/Layout.astro";
const posts = Object.values(await import.meta.glob('./resources/*.md', {eager: true}));
---
<Layout>
   
    <div class="list-container">
        <ul class="post-grid">
            {posts.map((post: any) => (
                <li class="post">
                    <a href={`${post.frontmatter.file}`} download={`${post.frontmatter.title}`}>
                        <img src={post.frontmatter.thumbnail} alt="" width="170" height="220" />
                        <div class="text-content">
                            <h4 class="title">{post.frontmatter.title}</h4>
                        </div>
                    </a>
                </li>
            ))}
        </ul>
    </div>

</Layout>

<style>

    .list-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 10px;
    }

    .post-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }

    .post {
        list-style: none;
    }

    .post h4 {
        color: #efeeee;
    }

    .post a {
        text-decoration: none;
    }
</style>

