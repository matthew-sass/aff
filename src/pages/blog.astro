---
import Layout from "../layouts/Layout.astro";
const posts = Object.values(await import.meta.glob('./blog/*.md', { eager: true }));
---

<Layout>
    <div class="list-container">
        <ul class="post-grid">
            {posts.map((post: any) => (
                <li class="post">
                    <a href={`${post.url}`}>
                        <img src={post.frontmatter.heroImage} alt={post.frontmatter.title} loading="lazy"/>
                        <div class="text-content">
                            <h2 class="title">{post.frontmatter.title}</h2>
                            <p class="subtitle">{post.frontmatter.subtitle}</p>
                        </div>
                        <div class="button-container">
                            <button><span>â†’</span></button>
                        </div>
                    </a>
                    
                </li>
            ))}
        </ul>
    </div>
</Layout>

<style>

    * {
        box-sizing: border-box;
    }

    .list-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        margin-top: 1vh;
    }

    .post-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-auto-rows: auto;
        gap: 2em;
        width: 100vw;
        padding: 0 2vw;
        box-sizing: border-box;
    }

    .post {
        list-style: none;
        overflow: hidden;
        padding: 5px;
        position: relative;
        display: flex;
        flex-direction: column;
    }

    .post a {
        text-decoration: none;
    }

    .post img {
        display: block;
        width: 100%;
        max-height: 727px;
        aspect-ratio: 4/5;
        object-fit: cover;
        transition: .5s ease-in-out;
    }

    .post:hover img{
        opacity: 0.4;
    }

    button {
        width: 40px;
        margin-top: 5px;
        background-color: #1d1b1a;
        border: none;
        color: #efeeee;
        text-align: center;
        font-size: 1em;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
        z-index: 1;
    }

    button span {
        display: inline-block;
        transition: transform 0.3s ease;
    }

    .post:hover button span {
        transform: translateX(8px);
    }

    
    .button-container {
        display: flex;
        justify-content: flex-end; 
        margin-top: 8px;
    }

    .text-content {
        color: #efeeee;
    }

    .text-content h2 {
        margin: 0;
        padding-top: 5px;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .text-content p {
        margin: 0;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    @media (max-width: 1022px) {
        .post-grid {
            grid-template-columns: repeat(3, 1fr); /* Switch to 3 columns */
            padding: 0 3vw;
            gap: 1.2em;
        }
    }

    @media (max-width: 768px) {
        .post-grid {
            grid-template-columns: repeat(2, 1fr); /* Switch to 2 columns */
            padding: 0 4vw;
            gap: 1.4em;
        }
    }

</style>
