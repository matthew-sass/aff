---
import Layout from "../layouts/Layout.astro";
const thumbnails = Object.values(await import.meta.glob('./gallery/*.md', {eager: true}));
---
<Layout>
    <div class="list-container">
        <ul class="post-grid">
            {
                thumbnails.map((post: any) => (
                    <li class="post">
                        <div class="image-container">
                            <a href={post.url}>
                                <img src={post.frontmatter.thumbnail} alt="" />
                                <div class="title-bar">
                                    <p class="title">{post.frontmatter.title}</p>
                                </div>
                            </a>
                        </div>
                    </li>
                ))
            }
        </ul>
    </div>
</Layout>

<style>
    .list-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
    }

    .post-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        padding: 0;
        justify-items: center;
    }

    .post {
        list-style: none;
        overflow: hidden;
        width: 250px;
        margin-bottom: 5vh;
    }

    .post img {
        width: 100%;
        object-fit: cover;
        height: 250px;
    }

    .title-bar {
        margin-top: -20px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        width: 100%;
        text-align: center;
    }

    .title {
        display: block;
        max-width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    a {
        color: #efeeee;
        text-decoration: none;
    }

    @media (max-width: 768px) {
        .post-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 480px) {

        .post {
            list-style: none;
            overflow: hidden;
            width: 140px;
            margin-bottom: 5vh;
        }

        .post img {
            width: 100%;
            object-fit: cover;
            height: 140px;
        }

        .post-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    
</style>