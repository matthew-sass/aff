---
import Layout from "../layouts/Layout.astro";
import daisy from "../daisy.webp";
---
<Layout>
  <div class="contact-section">
    <img src={daisy.src} alt="Daisy" class="daisy daisy-left" />
    <img src={daisy.src} alt="Daisy" class="daisy daisy-right" />

    <div class="container">
      <div class="text-content"></div>

      <form
        method="POST"
        action="https://formsubmit.co/amandamuldermgmt@gmail.com"
      >
        <input type="email" name="email" placeholder="Your email..." />
        <textarea name="message" placeholder="Your text..."></textarea>
        <div class="btn-wrapper">
          <button type="submit" class="button">
            <span class="back"></span>
            Send
          </button>
        </div>
      </form>
    </div>
  </div>
</Layout>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    transition: all 200ms ease-out;
  }

  button {
    appearance: none;
    background: transparent;
    border: none;
    cursor: pointer;
  }

  .contact-section {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    overflow: hidden;
  }

  .container {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 90%;
    max-width: 600px;
    padding: 20px;
    z-index: 2;
  }

  form {
    display: flex;
    flex-direction: column;
    width: 100%;
    gap: 5px;
    padding: 20px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    backdrop-filter: blur(5px);
  }

  input,
  textarea {
    width: 100%;
    padding: 10px;
    resize: none;
    background: #efeeee;
    border: 1px solid rgba(239, 238, 238, 0.4);
    color: rgba(0, 0, 0, 0.78);
    border-radius: 4px;
  }

  textarea {
    min-height: 200px;
  }

  input:focus,
  textarea:focus {
    outline: none;
    border-color: white;
  }

  .btn-wrapper {
    display: flex;
    justify-content: right;
  }

  .button {
    isolation: isolate;
    color: #efeeee;
    line-height: 1.5;
    font-weight: 500;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 3px 18px;
    border-radius: 9999rem;
    background: transparent;
    position: relative;
    border: 2px solid #efeeee;
    font-size: 1em;
  }

  .button > .back {
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: inherit;
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: -1;
  }

  .button > .back::before {
    content: "";
    width: 0;
    height: auto;
    aspect-ratio: 1;
    border-radius: 50%;
    background: rgba(239, 238, 238, 0.1);
    position: absolute;
  }

  .button:hover {
    color: white;
  }

  .button:hover > .back::before {
    width: 120%;
  }

  /* Daisies fade-in */
  .daisy {
    position: absolute;
    top: 33%;
    transform: translateY(-50%);
    width: 30vw;
    pointer-events: none;
    z-index: 0;

    /* fade-in setup */
    opacity: 0;
    transition: opacity 1.0s ease-in-out;
  }

  .daisy-left {
    left: 0;
    transform: translateY(-50%) scaleX(-1);
  }

  .daisy-right {
    right: 0;
  }

  .daisy.fade-in {
    opacity: 0.5;
  }

  .contact-section::before,
  .contact-section::after {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    width: 5px;
    pointer-events: none;
    z-index: 3;
  }

  @media (max-width: 1020px) {
    .daisy {
      display: none;
    }
  }
</style>

<script is:inline>
  window.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".daisy").forEach(d => d.classList.add("fade-in"));
  });
</script>
