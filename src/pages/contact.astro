---
import CRLayout from "../layouts/CRLayout.astro";
import daisy from "../daisy.webp";
---
<CRLayout>
  <div class="contact-section">
    <img src={daisy.src} alt="Daisy" class="daisy daisy-left" />
    <img src={daisy.src} alt="Daisy" class="daisy daisy-right" />

    <div class="container">
      <div class="text-content"></div>

      <form
        method="POST"
        action="https://formsubmit.co/amandamuldermgmt@gmail.com"
      >
        <input type="email" name="email" placeholder="Your email..." />
        <textarea name="message" placeholder="Your text..."></textarea>
        <div class="btn-wrapper">
          <button type="submit" class="button">Send</button>
        </div>
      </form>
    </div>
  </div>
</CRLayout>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    transition: all 200ms ease-out;
  }

  button {
    appearance: none;
    background: transparent;
    border: none;
    cursor: pointer;
  }

  .contact-section {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    overflow: hidden;
  }

  .container {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 90%;
    max-width: 600px;
    padding: 20px;
    z-index: 2;
  }

  form {
    display: flex;
    flex-direction: column;
    width: 100%;
    gap: 10px;
    padding: 20px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 10px;
    backdrop-filter: blur(5px);
  }

  input,
  textarea {
    width: 100%;
    padding: 10px;
    resize: none;
    background: #efeeee;
    border: 1px solid rgba(239, 238, 238, 0.4);
    color: rgba(0, 0, 0, 0.78);
    border-radius: 4px;
  }

  textarea {
    min-height: 200px;
  }

  input:focus,
  textarea:focus {
    outline: none;
    border-color: white;
  }

  .btn-wrapper {
    display: flex;
    justify-content: flex-end;
  }

  /* Cleaner, smaller button */
  .button {
    display: inline-block;
    padding: 8px 16px;
    font-size: 0.9em;
    font-weight: 500;
    color: #ffffff;
    background-color: #242220;
    border: 1px solid #efeeee;
    border-radius: 6px;
    cursor: pointer;
    text-align: center;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .button:hover {
    background-color: #efeeee;
    color: #242220;
  }

  /* Daisies fade-in */
  .daisy {
    position: absolute;
    top: 33%;
    transform: translateY(-50%);
    width: 30vw;
    pointer-events: none;
    z-index: 0;
    opacity: 0;
    transition: opacity 1s ease-in-out;
  }

  .daisy-left {
    left: 0;
    transform: translateY(-50%) scaleX(-1);
  }

  .daisy-right {
    right: 0;
  }

  .daisy.fade-in {
    opacity: 0.5;
  }

  .contact-section::before,
  .contact-section::after {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    width: 5px;
    pointer-events: none;
    z-index: 3;
  }

  @media (max-width: 1020px) {
    .daisy {
      display: none;
    }
  }
</style>

<script is:inline>
  window.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".daisy").forEach(d => d.classList.add("fade-in"));
  });
</script>
