---
import Layout from "../layouts/Layout.astro";
const posts = Object.values(
    await import.meta.glob("./blog/*.md", { eager: true }),
);
---

<Layout>
    <div class="header-container">
        <div class="text-header">
            <!-- <h1>Showcasing Vancouver's female and gender-diverse fronted talent.</h1> -->
        </div>
    </div>

    <div class="recent-posts-container">
        <div class="posts-header">
            <h2>Recent Posts</h2>
        </div>

        <div class="list-container">
            <ul class="post-grid">
                {
                    posts.slice(0, 4).map((post: any, index: number) => (
                        <li
                            class="post slide-in"
                            style={`animation-delay: ${index * 0.1}s`}
                        >
                            <a href={`${post.url}`}>
                                <img
                                    src={post.frontmatter.heroImage}
                                    alt={post.frontmatter.title}
                                    loading="lazy"
                                />
                                <div class="text-content">
                                    <h4 class="title">
                                        {post.frontmatter.title}
                                    </h4>
                                    <p class="subtitle">
                                        {post.frontmatter.subtitle}
                                    </p>
                                </div>
                                <div class="arrow">
                                    <div class="arrow-top" />
                                    <div class="arrow-bottom" />
                                </div>
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</Layout>

<style>
    .header-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .text-header {
        max-width: 1200px;
        text-align: center;
    }

    .recent-posts-container {
        font-size: 0.8em;
    }

    .posts-header {
        display: flex;
        width: 100%;
        margin-bottom: -25px;
        padding: 0 4vw;
        margin-left: 5px;
    }

    h1 {
        margin: 0;
        font-family: "Special Gothic Expanded One", sans-serif;
    }

    * {
        box-sizing: border-box;
    }

    /* .slide-in {
        opacity: 0;
        transform: translateY(400px);
        animation: slideIn 0.7s forwards;
        animation-fill-mode: forwards;
        pointer-events: auto;
    }

    @keyframes slideIn {
        0% {
            opacity: 0;
            transform: translateY(400px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    } */

    .list-container {
        display: flex;
        width: 100%;
    }

    .post-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-auto-rows: auto;
        gap: 2em;
        width: 100vw;
        padding: 0 4vw;
        box-sizing: border-box;
    }

    .post {
        list-style: none;
        overflow: hidden;
        position: relative;
        display: flex;
        padding: 5px;
        flex-direction: column;
        font-size: 1.1em;
    }

    .post a {
        text-decoration: none;
    }

    .post img {
        display: block;
        width: 100%;
        max-height: 727px;
        aspect-ratio: 4/5;
        object-fit: cover;
        transition: 0.5s ease-in-out;
    }

    .post:hover img {
        opacity: 0.4;
    }

    .arrow {
        width: 10px;
        height: 10px;
        margin-top: 12px;
        position: relative;
        margin-left: auto;
        z-index: 2;
        margin-bottom: 10px;
    }

    .arrow-top,
    .arrow-bottom {
        background-color: #666;
        height: 4px;
        left: -5px;
        position: absolute;
        top: 50%;
        width: 75%;
    }

    .arrow-top:after,
    .arrow-bottom:after {
        background-color: #fff;
        content: "";
        height: 100%;
        position: absolute;
        top: 0;
        transition: all 0.15s;
    }

    .arrow-top {
        transform: rotate(45deg);
        transform-origin: bottom right;
    }

    .arrow-top:after {
        left: 100%;
        right: 0;
        transition-delay: 0s;
    }

    .arrow-bottom {
        transform: rotate(-45deg);
        transform-origin: top right;
    }

    .arrow-bottom:after {
        left: 0;
        right: 100%;
        transition-delay: 0.15s;
    }

    .post:hover .arrow-top:after {
        left: 0;
        transition-delay: 0.15s;
    }

    .post:hover .arrow-bottom:after {
        right: 0;
        transition-delay: 0s;
    }

    .arrow:active {
        transform: translateX(-50%) translateY(-50%) scale(0.9);
    }

    .text-content {
        color: #efeeee;
    }

    .text-content h4 {
        margin: 0;
        padding-top: 10px;
        padding-bottom: 10px;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: 1.3em;
    }

    .text-content p {
        margin: 0;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
        overflow: hidden;
        text-overflow: ellipsis;
        font-size: 1em;
    }

    @media (max-width: 1920px) {
        .post-grid {
            grid-template-columns: repeat(4, 1fr);
            padding: 0 4vw;
            gap: 1.5em;
        }

        .posts-header {
            padding: 0 4vw;
            margin-left: 5px;
        }

        .text-content h4 {
            font-size: 1.4em;
        }

        .text-content p {
            font-size: 1.1em;
        }
    }

    @media (max-width: 1022px) {
        .post-grid {
            grid-template-columns: repeat(2, 1fr);
            padding: 0 3vw;
            gap: 1.2em;
        }

        .posts-header {
            padding: 0 3vw;
            margin-left: 5px;
        }

        .text-content h4 {
            font-size: 1.3em;
        }

        .text-content p {
            font-size: 1.0em;
        }
        
    }

    @media (max-width: 768px) {
        .post-grid {
            grid-template-columns: repeat(2, 1fr);
            padding: 0 3vw;
            gap: 1.4em;
        }

        .posts-header {
            padding: 0 3vw;
            margin-left: 5px;
            font-size: 0.9em;
        }

        .text-content h4 {
            font-size: 1.2em;
        }

        .text-content p {
            font-size: 1.0em;
        }
    }

    @media (max-width: 400px) {
        .post-grid {
            grid-template-columns: repeat(2, 1fr);
            padding: 0 3vw;
            gap: 0.5em;
        }

        .posts-header {
            padding: 0 3vw;
            margin-left: 5px;
            font-size: 0.8em;
        }
    }
</style>
