---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout pageTitle={frontmatter.title}>
  <div class="container">
    <div class="content">
      <img src={frontmatter.heroImage} alt="" />
      <h1>{frontmatter.title}</h1>
      <div class="text">
        <slot />
      </div>
    </div>
  </div>
</Layout>

<style>

  img {
    max-width: 700px;
    text-align: center;
    display: block;
    margin: 0 auto;
  }

  .container {
    display: flex;
    justify-content: center;
  }

  .content {
    width: 100%;
    max-width: 700px;
    padding: 1em;
  }

  .content img {
    width: 100%;
    height: 55vh;
    max-height: 727px;
    object-fit: contain;
  }

  .text {
    max-width: 700px;
    text-align: left;  
    margin: 0 auto;  
    color: #efeeee;
  }

  .text a {
    color:#efeeee;
    text-decoration: none;
  }
</style>
