---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout pageTitle={frontmatter.title}>
  <div class="container">
    <div class="content">
      <img src={frontmatter.heroImage} alt="" />
      <div class="text">
        <h1>{frontmatter.title}</h1>

        <slot />
      </div>
    </div>
  </div>
</Layout>

<style>
  img {
    max-width: 700px;
    text-align: center;
    display: block;
    margin: 0 auto;
  }

  .container {
    display: flex;
    justify-content: center;
    position: relative;
  }

  .content {
    width: 100%;
    max-width: 700px;
    padding: 1em;
  }

  .content img {
    width: 100%;
    height: 55vh;
    max-height: 727px;
    object-fit: contain;
  }

  .text {
    max-width: 600px;
    text-align: left;  
    margin: 0 auto;  
    color: #efeeee;
  }

  .text a {
    color: #efeeee;
    text-decoration: none;
  }

  .back-button {
    display: inline-block;
    margin-bottom: 1em;
    font-size: 0.9em;
    opacity: 0.7;
    transition: opacity 0.2s;
  }

  .back-button:hover {
    opacity: 1;
  }
</style>
