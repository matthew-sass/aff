---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout pageTitle={frontmatter.title}>
  <div class="content">
    <h1>{frontmatter.title}</h1>
    <img src={frontmatter.heroImage} width="300" alt="" />
    <slot />
  </div>
</Layout>

<style>
  .content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: left;
    max-width: 600px;
    margin: 0 auto;
  }
</style>
