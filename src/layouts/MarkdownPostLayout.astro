---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout pageTitle={frontmatter.title}>
  <div class="container">
    <div class="content">
      <div class="img-container">
        <img src={frontmatter.heroImage} alt="" />
      </div>
      <div class="text">
        <div class="title">
          <h1>{frontmatter.title}</h1>
        </div>

        <slot />
      </div>
    </div>
  </div>
</Layout>

<style>
  img {
    max-width: 700px;
    text-align: center;
    display: block;
    margin: 0 auto;
  }

  .container {
    display: flex;
    justify-content: center;
    position: relative;
  }

  .content {
    width: 100%;
    max-width: 900px;
    padding: 1em;
  }

  .title {
    text-align: center;
  }

  .content img {
    width: 100%;
    height: auto;
    max-height: 50vh;
    max-width: 100%;
    object-fit: contain;
    display: block;
    margin: 0 auto;
  }

  .img-container {
    background: linear-gradient(135deg, #1f1f1f, #3a3a3a);
    outline: 1px solid #1f1f1f;
    border-radius: 5px;
    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
  }

  .text {
    max-width: 900px;
    text-align: left;  
    margin: 0 auto;  
    color: #efeeee;
  }

  .text a {
    color: #efeeee;
    text-decoration: none;
  }

  .back-button {
    display: inline-block;
    margin-bottom: 1em;
    font-size: 0.9em;
    opacity: 0.7;
    transition: opacity 0.2s;
  }

  .back-button:hover {
    opacity: 1;
  }
</style>
