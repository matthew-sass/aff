---
import Layout from "./Layout.astro";
import '../styles/lightbox.css'
const { frontmatter } = Astro.props;
---

<Layout>


  <div class="list-container">
    <h2>{frontmatter.title}</h2>
    <div class="post-grid">
      {frontmatter.images.map((image) => (
        <div class="post">
          <a href={image} data-lightbox="gallery-post">
            <img src={image} alt="Gallery image" loading="lazy" />
          </a>
        </div>
      ))}
    </div>
  </div>
    
</Layout>

<script is:inline src="/js/lightbox-plus-jquery.js"></script>

<script is:inline>
import lightboxPlusJquery from "../js/lightbox-plus-jquery";

    lightboxPlusJquery.option({
        'resizeDuration': 200,
        'wrapAround': 200,
        'positionFromTop': 20
    })
</script>

<style>
    .list-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .post-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        padding: 10px;
    }

    .post {
        list-style: none;
        overflow: hidden;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

    .post:hover {
        transform: scale(1.05);
    }

    .post img {
        width: 100%;
        object-fit: cover;
        height: 225px;
        display: block;
    }

    @media (max-width: 600px) {
        .post-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .post img {
            height: 175px;
        }

    }

    @media (min-width: 700px) {
    .post-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}


    @media (max-width: 360px) {
        .post-grid {
            grid-template-columns: 1fr;
        }

        .post img {
            height: 200px;
        }

    }

    
    
</style>
