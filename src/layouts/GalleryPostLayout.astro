---
import Layout from "./Layout.astro";
import '../styles/lightbox.css'
const { frontmatter } = Astro.props;
console.log(frontmatter)
---

<Layout>

<h4>{frontmatter.title}</h4>
  <div class="list-container">
    <div class="masonry-grid">
      {frontmatter.images.map(({image, caption}) => (
        <div class="post">
          <a href={image} data-lightbox="gallery-post" data-title={caption}>
            <img src={image} alt="Gallery image" loading="lazy" />
          </a>
        </div>
      ))}
    </div>
  </div>
    
  
</Layout>

<script is:inline src="/js/lightbox-plus-jquery.js"></script>

<script is:inline>
import lightboxPlusJquery from "../js/lightbox-plus-jquery";

    lightboxPlusJquery.option({
        'resizeDuration': 200,
        'wrapAround': 200,
        'positionFromTop': 20
    })
</script>

<style>

h4 {
  text-align: center;
  margin-top: 10vh;
}

.post {
  font-size: 1.1em;
}

.list-container {
  display: flex;
  justify-content: center;
  width: 100%;
}

.masonry-grid {
    column-count: 4;
    column-gap: 1em;
    max-width: 100%;
    border-top: 1px solid #efeeee;
    padding-top: 10px;
    margin: 0vh 4vw;
}

.post {
    display: inline-block;
    break-inside: avoid;
    position: relative;
    margin-bottom: 1em;
    transition: transform ease-in-out 1.0s;
}

.post img {
    width: 100%;
    height: auto;
    display: block;
    transition: .5s ease-in-out;
}

.post:hover img {
    opacity: 0.4;
}

a {
    color: #34312f;
}

@media (max-width: 1020px) {
    .masonry-grid {
        margin: 0.75vh 3vw;
        column-count: 3;
        column-gap: 0.75em;
    }

    .post {
        margin-bottom: 0.75em;
    }
}

@media (max-width: 768px) {
    .masonry-grid {
        margin: 0.5vh 3vw;
        column-count: 2;
        column-gap: 0.75em;
    }

    .post {
        margin-bottom: 0.75em;
    }
}

</style>
